<%- include('../layouts/header'); %> <!-- Include the header template -->

    <body>
        <%- include('../layouts/navbar'); %> <!-- Include the navbar template -->
            <div class="container">
                <div class="row my-4">
                    <div class="col-lg-12">
                        <% if (message) { %> <!-- Check if the `message` object exists -->
                            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                                <button class="btn-close" data-bs-dismiss="alert" type="button"
                                    aria-label="Close"></button>
                                <strong>
                                    <%= message.message %> <!-- Display the `message.text` value -->
                                </strong>
                            </div>
                            <% } %> <!-- End of the if statement -->

                                <div class="table-responsive">
                                    <% if (users!='' ) { %> <!-- Check if the `users` array is not empty -->
                                        <table class="table table-striped text-center">
                                            <thead>
                                                <tr class="table-bg">
                                                    <th>ID</th>
                                                    <th>Image</th>
                                                    <th>Name</th>
                                                    <th>E-mail</th>
                                                    <th>Phone</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody class="text-center align-middle">
                                                <% users.forEach((row,index)=> { %>
                                                    <!-- Loop through each user in the `users` array -->
                                                    <tr>
                                                        <td>
                                                            <%= index %> <!-- Display the index of the current user -->
                                                        </td>
                                                        <td><img src="<%= row.image %>" width="50"
                                                                class="img-thumbnail"></td>
                                                        <!-- Display the user's image -->
                                                        <td>
                                                            <%= row.name %> <!-- Display the user's name -->
                                                        </td>
                                                        <td>
                                                            <%= row.email %> <!-- Display the user's email -->
                                                        </td>
                                                        <td>
                                                            <%= row.phone %> <!-- Display the user's phone number -->
                                                        </td>
                                                        <td>
                                                            <a href="/edit/<%= row.id %>" class="text-success"><i
                                                                    class="fas fa-edit fa-lg mx-1"></i></a>
                                                            <!-- Link to edit user with the user's ID -->
                                                            <a href="/delete/<%= row.id %>" class="text-danger"><i
                                                                    class="fas fa-trash fa-lg mx-1"></i></a>
                                                            <!-- Link to delete user with the user's ID -->
                                                        </td>
                                                    </tr>
                                                    <% }) %> <!-- End of the forEach loop -->
                                            </tbody>
                                        </table>
                                        <% } else { %> <!-- If the `users` array is empty -->
                                            <h1 class="text-center text-secondary mt-5">No Users Found</h1>
                                            <!-- Display a message indicating no users found -->
                                            <% } %> <!-- End of the if statement -->
                                </div>
                    </div>
                </div>
            </div>
            <%- include('../layouts/footer'); %> <!-- Include the footer template -->
    </body>